.fng-search-results-tile
    float left
    width 50%

.fng-search-results-tile-inner
    padding-left 25px
    padding-bottom 25px

.fng-search-results-tile-headline
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
    width 100%
    font-size 16px
    color rgb(86, 90, 92)

.fng-search-results-tile-headline.map
    font-size 14px

.fng-search-results-tile-image
    width 100%
    background #fdfdfd

.fng-search-results-tile-headline-description
    color rgb(130, 136, 138)
    font-size 14px

.fng-search-results-tile-headline-description.map
    font-size 12px

.fng-search-results-tile-text
    padding-top 10px
    padding-left 10px
    padding-right 10px

.fng-search-results-star
    color rgb(255, 180, 0)
